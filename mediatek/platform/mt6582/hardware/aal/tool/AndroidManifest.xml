<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mediatek.aaltool"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AALLCMCalibration"
            android:launchMode="singleTask" android:screenOrientation="portrait"
            android:label="@string/title_activity_lcm_calibration" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AALALSCalibration"
            android:launchMode="singleTask" android:screenOrientation="portrait"
            android:label="@string/title_activity_als_calibration" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".AALTuning"
            android:launchMode="singleTask" android:screenOrientation="portrait"
            android:label="@string/title_activity_tuning" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
